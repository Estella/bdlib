# $Id$

SHELL = @SHELL@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
CCDEPMODE = @CCDEPMODE@

@SET_MAKE@

CXX = @CXX@
LD = @CXX@
STRIP = @STRIP@
CXXFLAGS = @CXXFLAGS@ -I. -I$(top_srcdir) -I$(top_srcdir)/src @DEFS@ $(CFLGS)

OBJS = String.o

.PHONY: default clean distclean bdlib test build_msg

default:
	@echo ""
	@echo "Let's try this from the right directory..."
	@echo ""
	@cd ../.. && $(MAKE)

clean:
	@rm -f .depend *.o *~
	@rm -f *_test test/*.o
	@rm -f ../bdlib.o
	-+@cd tests && $(MAKE) clean

distclean: clean
	@rm -rf .deps Makefile
	-+@cd tests && $(MAKE) distclean

bdlib: ../bdlib.o

../bdlib.o: build_msg $(OBJS)
	@$(LD) -o $@ $(OBJS)

build_msg:
	@echo "[*] Building bdlib"

test:

include ./.deps/includes
include $(top_srcdir)/build/build.mk
